<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background_light"
              android:padding="@dimen/padding">

    <!-- <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/Checks_closed"
               android:id="@+id/textView"
               android:background="@drawable/round_rectangle" android:textColor="@color/text"
               android:gravity="center_vertical|center_horizontal"
               android:layout_margin="@dimen/padding"/>-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="#ff4e4e4e">
        <ListView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@android:id/list" android:layout_gravity="left|center_vertical"
                android:layout_margin="@dimen/padding"
                android:drawSelectorOnTop="false" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="@dimen/width_button"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonBack" android:src="@drawable/ic_action_back" style="@style/CustomButtonImage"
                    android:clickable="true"
                    android:contentDescription="@string/Come_back"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>